 <% @books.each do |book| %>
<div class="col-12 col-sm-6 mt-3">
  <div class="card" style="width: 100%;">
      <div class="card-header">
      <span class="badge badge-pill badge-<%= book.status ? 'success' : 'danger'%>"><%= book.status ? 'Visible' : 'Invisible' %></span>
      <span class="badge badge-pill badge-info">Page Count: <%= book.pagecount %></span>
    
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <footer class="blockquote-footer">Written by <cite title="Source Title"><%= book.author.split(' ').map(&:capitalize).join(" ") %></cite></footer>
        <%= link_to 'Destroy', book_path(book),
                                method: :delete,
                                data: { confirm: 'Are you sure?' },
                                :class => 'btn btn-danger btn-sm float-right mt-1 ml-1'%>
        <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-secondary btn-sm float-right mt-1 ml-1' %>
        <%= link_to 'Show', book_path(book), :class => 'btn btn-primary btn-sm float-right mt-1' %>
      </div>
  </div>
</div>
<% end %>
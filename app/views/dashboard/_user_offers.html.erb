<% if @user_offers.size > 0 %>
  <% @user_offers.each do |offer| %>
    <div class="alert alert-warning" role="alert">
      You offer for <strong><a href="<%=book_path(offer.book.id)%>"><%= offer.book.title %></a></strong> book.
      <span class="badge badge-pill badge-info float-right">
        <%= offer.status %>
      </span>
      <% if offer.status == false %>
        <%= link_to 'Click here', edit_book_comment_path(offer, comment)%> to accept it.
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info" role="alert">
    You have no offers.
  </div>
<% end %>
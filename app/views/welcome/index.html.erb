<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h1 class="display-4">Hello, <%= current_user.present? ? current_user.username : 'guest!' %></h1>
        <% if current_user.present? %>
          <p class="lead">You have <%= current_user.books.count %> books.</p>
          <hr class="my-4">
          <a href="<%=new_book_path%>" class="btn btn-success">Create a book</a>
        <% else %>
          <p class="lead">This Is A Book Share Platform</p>
          <hr class="my-4">
          <p>If you want to book share or rent a book, you must be registered or signin.</p>
        <% end %>
      </div>
    </div>
  </div>

  <% if @books.size > 0 %>
    <div class="row">
      <div class="col-md-12">
        <h2>Listing Books</h2>
        <hr>
      </div>
      <% @books.each do |book| %>
        <div class="col-6 col-sm-6 col-md-3 mb-3">
          <div class="card" style="width: 100%;">
              <div class="card-header">
              <%= link_to book.user.username, user_path(book.user), :class => 'badge badge-pill badge-success' %>          
                <span class="badge badge-pill badge-info">Page Count: <%= book.pagecount %></span>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <footer class="blockquote-footer">Written by <cite title="Source Title"><%= book.author.split(' ').map(&:capitalize).join(" ") %></cite></footer>
                <footer class="blockquote-footer">
                  Created at <%=verbose_date(book.created_at)%>
                </footer>
                <% if current_user %>
                  <%= link_to 'Show', book_path(book), :class => 'btn btn-primary btn-sm float-right mt-1' %>
                <% end %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

